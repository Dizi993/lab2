#include <stdio.h>
#include <locale.h>
#define D 2.54
#define G 2.32
void main()
{
	setlocale(LC_ALL, "RUS");
	int num;
	printf("введите  число:");
	scanf_s("%d", &num);
	printf("Введено число: %d",num);

	int num2;
	printf("\nвведите второе число: ");
	scanf_s("%d",&num2);
	printf("Введено второе число: %d\n ",num2);
	
	printf("%d+%d=%d\n",num,num2,num2+num);
	printf("%d-%d=%d\n", num, num2, num2 - num);
	printf("%d*%d=%d\n", num, num2, num2 * num);
	printf("%d/%d=%d\n", num, num2, num2 / num);
	printf("остаток от деления %d на %d=%d\n", num, num2, num2 % num);


	int dym;

	float result;
	printf("Введите значение:");
		scanf_s("%d", &dym);
		result = D * dym;
		printf(" % d английских дюймов – это % .2f см ", dym, result);

		int idym;

		float resultt;
		printf("\nВведите значение:");
		scanf_s("%d", &idym);
		resultt = G * idym;
		printf(" % d испанских дюймов – это % .2f см ", idym, resultt);

		float num3;
		float num4;
		printf("\n\nВведите num3:");
		scanf_s("%f", &num3);
		printf("Введите num4:");
		scanf_s("%f", &num4);
		puts("\n\n\t--------------------------------");
		puts("\t|num3*num4|num3+num4 |num3-num4|");
		puts("\t--------------------------------");
		printf("\t|%4.2f*%.2f|%4.2f+%.2f|%4.2f-%4.2f|", num3, num4, num3, num4, num3, num4);
		puts("\n\t--------------------------------");
		printf("\t|   %6.4f|%6.4f|%6.4f|", num3 * num4, num3 + num4, num3 - num4);
		puts("\n\t--------------------------------");

}
