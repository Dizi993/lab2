#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
#include <math.h>
#define ROW 9
#define COL 9
#define STR 4
#define POS 4

int main() 
{
    setlocale(LC_ALL, "RUS");
    int str, pos;
    printf("\n");

    for (int i = 0; i <= STR; i++)
    {
        for (int j = 0; j <= POS - i; j++)

            printf("%5d", (i + 1) * 5);
        printf("\n");

    }
    system("pause");


    int row, col;
    printf("\n");

    for (row = 1; row <= ROW; ++row)
    {
        for (col = 1; col <= row; col++)

            printf("%5d", col * row);
        printf("\n");

    }
    system("pause");
    long long int number;
    printf("Введите произвольное длинное число: ");
    scanf("%lld", &number);
    int prev_digit = -1;
    for (; number > 0; number /= 10)
    {
        int digit = number % 10;
        if (digit == prev_digit)
        {
            printf("Рядом стоящие одинаковые цифры: %d\n", digit);
        }
        prev_digit = digit;
    }
    system("pause");


    char symbol;
    printf("Введите символ для рисования: ");
    scanf("%c", &symbol);
    getchar();

    int height;

    printf("Введите num: ");
    scanf("%d", &height);

    int width = height * 2 - 1;

    for (int i = 0; i < width; i++)
        printf("*");

    printf("\n");
    for (int i = 1; i < height; i++) {
        for (int j = 0; j < width; j++) {
            if (j == i || j == width - i - 1) {
                printf("%c", symbol);
            }
            else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
